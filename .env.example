# WorldEndArchive Configuration

# Server settings
PORT=3000

# Crawler settings
MAX_DEPTH=3
CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=10000
REQUEST_DELAY=500
RESPECT_ROBOTS_TXT=true
USER_AGENT=WorldEndArchive/1.0

# Database settings
DATA_DIR=./data

# Domain filters
# Comma-separated list of domains to allow (empty means all)
ALLOWED_DOMAINS=

# Comma-separated list of domains to exclude
EXCLUDED_DOMAINS=facebook.com,twitter.com,instagram.com,linkedin.com,youtube.com

# Max page size in bytes (50MB default)
MAX_PAGE_SIZE=52428800 